doctype html
html
  head
    title tomodachi
    meta(charset='utf-8')
    meta(
      name='viewport'
      content='width=device-width, initial-scale=1, shrink-to-fit=no'
    )
    script(src='/main.js')
    link(
      rel='stylesheet'
      href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css'
      integrity='sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B'
      crossorigin='anonymous'
    )
    link(
      rel='stylesheet'
      href='https://use.fontawesome.com/releases/v5.3.1/css/all.css'
      integrity='sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU'
      crossorigin='anonymous'
    )
  body(class='bg-dark')
    div(class='container-fluid')
      div(class='row justify-content-center mt-3 mb-1')
        button(
          type='button'
          class='btn btn-outline-light py-2'
          data-test-id='add-friend'
          onclick='addFriend()'
        ) 
          i(class='fas fa-plus mr-2')
          i(class='fas fa-user')
      div(class='row justify-content-center')
        each friend in friends
            div(class='card m-2' style='width: 18rem;')
              div(class='card-header')
                span(class='mr-2 h3 align-middle')= friend.name
                span(class='badge badge-pill badge-secondary mr-2')= friend.friendId
                i(class='fas fa-pencil-alt text-muted align-middle')
              div(class='card-body text-center')
                button(
                  type='button'
                  class='btn btn-outline-dark mr-2'
                  data-test-id='add-info'
                  onclick='addInfo("' + accountId + '", "' + friend.friendId + '")'
                )
                  i(class='fas fa-plus mr-2')
                  i(class='fas fa-info-circle')
                button(
                  type='button'
                  class='btn btn-outline-dark'
                )
                  i(class='fas fa-plus mr-2')
                  i(class='fas fa-comment')
              ul(class='list-group list-group-flush')
                li(class='list-group-item')
                  div(class='container-fluid')
                    div(class='row')
                      div(class='col-10')
                        i(
                          class='fas fa-info-circle mr-2 text-muted'
                        )
                        span= friend.about[0]
                      div(class='col')
                        i(
                          class='fas fa-times text-muted'
                        )
                li(class='list-group-item')
                  div(class='container-fluid')
                    div(class='row')
                      div(class='col-10')
                        i(
                          class='fas fa-comment mr-2 text-muted'
                        )
                        span= friend.toTalkAbout[0]
                      div(class='col')
                        i(
                          class='fas fa-times text-muted'
                        )